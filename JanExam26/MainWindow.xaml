<Window x:Class="JanExam26.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JanExam26"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="myGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
        </Grid>

        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"  Grid.Row="0" Grid.Column="0" FontSize="30" Text="Filter"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"  Grid.Row="0" Grid.Column="1" FontSize="30" Text="Robot List"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"  Grid.Row="0" Grid.Column="2" FontSize="30" Text="Robot Details"/>

        <StackPanel Grid.Row ="1" Orientation="Horizontal">
            <Image Height =" 100" Width = "100" Source = "images\delivery-robot.png" RenderTransformOrigin="0.581,0.5" />
            
        </StackPanel>
        <StackPanel Grid.Row =" 2" Orientation="Horizontal">
            <Image Height =" 100" Width = "100" Source = "/images/household-robot.png" RenderTransformOrigin="0.581,0.5" />
        </StackPanel>
        <StackPanel Grid.Row =" 2" Orientation="Horizontal">
            <Image Height =" 100" Width = "100" Source = "/images/robot.png" RenderTransformOrigin="0.581,0.5" />
            
        </StackPanel>

        <Button x:Name = "button1"  
            Grid.Column="2"
            Grid.Row=" 2"
            Content = "Charge" 
            Click = "ChargeButton_Click" 
            ClickMode = "Press" 
            Margin = "10"  
            Width = "150" 
            HorizontalAlignment = "Center" 
            VerticalAlignment="Bottom"
            Background = "MediumPurple"
            Foreground="White"
            FontSize="18"
                
                />
        







        <Label Content="{Binding RobotName}" VerticalAlignment="Center" HorizontalAlignment="Center"  Grid.Row="1" Grid.Column="1" ></Label>


    </Grid>
</Window>
